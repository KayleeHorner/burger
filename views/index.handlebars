<div class="container">

  <div class="row">
    <div class="col s12">
      <h1>Eat-Da-Burger</h1>
      <img id="icon">
    </div>
  </div>

  <div class="row">
    <div class="col s6">
      <h4 class="titles">Which burger do you want to eat?</h4>

      <ul>
        {{#each burger_name}}
        {{#unless devoured}}
        <li>{{burger_name}}
        {{>burgers/burger-block devoured=false}}
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
  

    <div class="col s6">
      <h4 class="titles">Burgers Devoured:</h4>

      <ul>
    
       {{#each burger_name}}
        {{#if devoured}}
       <li> {{burger_name}}  </li>
        {{/if}}
        {{/each}}
        
      </ul>

    </div>
  </div>

  <div class="row">
    <div class="col s4 offset-s4" id="adding">
      <h4 class="titles">Add a Burger</h4>
      <form class="create-form">
        <div class="form-group">
          <label for="new_burger">Kind of Burger:</label>
          <input type="text" id="new_burger" name="name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>
